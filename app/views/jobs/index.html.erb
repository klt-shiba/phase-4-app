<h1>All jobs</h1>
<div>
  <span><%=link_to "Profile", user_path(current_user.id)%></span> | 
  <span><%=link_to "Post a Job", new_user_job_path(current_user.id)%></span> |
  <span><%=link_to "Dashboard", root_path%></span>
</div>
<hr>
<div>
  <h4>Search</h4>
  <%= form_tag("/jobs", method: "get") do %>
    <%= text_field_tag(:q) %>
    <%= submit_tag "Search" %>
  <% end %>
  <br>
  <span><%=link_to "Clear search", jobs_path%></span> | 
  <span><%=link_to "Most popular", most_popular_jobs_path%></span> | 
  <span><%=link_to "Wash & groom", category_jobs_path("Wash & groom")%></span> | 
  <span><%=link_to "Walk & exercise", category_jobs_path("Walk & exercise")%></span> | 
  <span><%=link_to "Overnight stay", category_jobs_path("Overnight stay")%></span> | 
  <span><%=link_to "Training", category_jobs_path("Training")%></span>
</div>
<%= render partial: 'jobs', locals: {jobs: @jobs} %>
